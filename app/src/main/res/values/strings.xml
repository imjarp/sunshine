    <string name="pref_temperature_key">Temperature</string>
    <string name="pref_temperature_label">Temp</string>
    <string name="pref_temperature_default">Metric</string>


    <string-array name="Temperature_Units_Entries">
        <item>@string/Metric</item>
        <item>@string/Imperial</item>
    </string-array>
    <string-array name="Temperature_Units_Values">
        <item>@string/Metric</item>
